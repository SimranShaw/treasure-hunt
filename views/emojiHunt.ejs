            chances--;
            error++;
            setCookie("error", error, 2);
            alert("oops. wrong answer. chances left : "+chances);
            if(chances == 0){
                levelUnlocked = 0;
                chances = 2;
                setCookie("levelUnlocked", levelUnlocked, 2);
                document.getElementById("myModal").style.display = "block";
                document.getElementById("correct").style.display = "none";
                document.getElementById("deadEnd").style.display = "block";
            }
            return;
